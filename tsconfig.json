{
  "compilerOptions": {
    "target": "es5",
    "lib": [ "es2020" ],
    "module": "commonjs",
    "outDir": "./build",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true
  },
  "include": [ "src" ],
  "exclude": ["node_modules"]
}
